# Chave secreta do Django (gere uma com segurança em produção)
SECRET_KEY=sua-chave-secreta-aqui

# Ativa o modo debug (mantenha como False em produção)
DEBUG=True

# Tipo de banco de dados: sqlite, postgres ou mysql
DB_USED=postgres

# Configurações do PostgreSQL (utilizadas quando DB_USED=postgres)
POSTGRES_DB=nome_do_banco
POSTGRES_USER=usuario
POSTGRES_PASSWORD=senha_segura
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Para MySQL (utilize se DB_USED=mysql)
MYSQL_DATABASE=nome_do_banco
MYSQL_USER=usuario
MYSQL_PASSWORD=senha_segura
MYSQL_HOST=localhost
MYSQL_PORT=3306
